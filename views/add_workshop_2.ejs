<div class="jumbotron" style="background-color:#f7dc6f ;" >
  <h1 class="display-4">Hey, there!</h1>
  <p class="lead">Wanna organize a workshop?</p>
  <hr class="my-4">
  <p>update workshop details here.</p>
</div>

<form method="post" action="/add_workshop">
  <div class="align-proper">
  <div class="form-row">
    <div class="form-group col-md-2">
      <label for="id">Workshop ID</label>
      <input type="text" name="id" class="form-control" placeholder="Enter a Unique ID for Workshop" value=<%=data.id%> >
    </div>
    <div class="form-group col-md-4">
      <label for="name_of_workshop">Name of Workshop</label>
      <input type="text" name="name_of_workshop" class="form-control" value=<%=data.name_of_workshop%> >
    </div>
    <div class="form-group col-md-4">
      <label for="type_of_workshop">Type of Workshop</label>
      <select name="type_of_workshop" class="form-control">
        <%if(data.type_of_workshop === 'Soft Skills'){%>
          <option value="Technology">Technology</option>
          <option value="Soft Skills" selected>Soft Skills</option>
          <option value="Management">Management</option>
          <option value="Miscellaneous">Miscellaneous</option>
        <%}else if(data.type_of_workshop === 'Management'){%>
          <option value="Technology">Technology</option>
          <option value="Soft Skills">Soft Skills</option>
          <option value="Management" selected>Management</option>
          <option value="Miscellaneous">Miscellaneous</option>
        <%}else if(data.type_of_workshop === 'Miscellaneous'){%>
          <option value="Technology">Technology</option>
          <option value="Soft Skills">Soft Skills</option>
          <option value="Management">Management</option>
          <option value="Miscellaneous" selected>Miscellaneous</option>
        <%}else{%>
          <option value="Technology" selected >Technology</option>
          <option value="Soft Skills">Soft Skills</option>
          <option value="Management">Management</option>
          <option value="Miscellaneous">Miscellaneous</option>
        <%}%>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="no_of_people">No of People</label>
      <input type="number" class="form-control" name="no_of_people" min="1" max="100" value=<%=data.no_of_people%> >
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="name_of_organizer">Name of the organizer</label>
      <input type="text" class="form-control" name="name_of_organizer" value="<%=data.name_of_organizer%>" >
    </div>
    <div class="form-group col-md-4">
      <label for="contact">Contact</label>
      <input type="text" class="form-control" name="contact" value="<%=data.contact%>" >
    </div>
    <div class="form-group col-md-4">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="email" value="<%=data.email%>" >
    </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="address">Address</label>
    <input type="text" class="form-control" placeholder="1234 Main St" name="address" value="<%=data.address%>" >
  </div>
  <div class="form-group col-md-4">
    <label for="date">Date</label>
    <input type="text" class="form-control" name="date" value=<%=data.date%> >
  </div>
  <div class="form-group col-md-2">
    <label for="time">Select a time:</label>
    <input type="text" class="form-control" name="time" value=<%=data.time%> >
  </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-8">
    <label for="description">Description of the workshop</label>
    <input type="text" class="form-control" placeholder="Describe your event" name="description" value="<%=data.description%>">
  </div>
  <div class="form-group col-md-2">
    <label for="done">Click Below</label>
    <button type="submit" name="done" class="form-control btn btn-primary">Confirm</button>
  </div>
</div>
  </div>
  </form>

